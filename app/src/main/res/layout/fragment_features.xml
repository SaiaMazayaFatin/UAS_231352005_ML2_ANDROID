<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView style="@style/TextAppearance.Material3.HeadlineMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fitur Aplikasi" android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">
            <LinearLayout android:padding="16dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <ImageView android:src="@android:drawable/ic_menu_search" android:layout_width="40dp" android:layout_height="40dp" app:tint="@color/md_theme_primary"/>
                <TextView android:layout_marginStart="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Prediksi Akurat Berbasis AI" style="@style/TextAppearance.Material3.TitleMedium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">
            <LinearLayout android:padding="16dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <ImageView android:src="@android:drawable/ic_menu_view" android:layout_width="40dp" android:layout_height="40dp" app:tint="@color/md_theme_primary"/>
                <TextView android:layout_marginStart="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Antarmuka Mudah Digunakan" style="@style/TextAppearance.Material3.TitleMedium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>