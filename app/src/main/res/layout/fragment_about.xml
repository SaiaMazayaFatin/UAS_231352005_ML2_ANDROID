<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:textColor="@color/md_theme_primary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang di 'Prediktor Prestasi'!"
                    android:textColor="@color/md_theme_primary"/>

                <TextView
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Pernahkah Anda bertanya-tanya faktor apa yang paling membentuk prestasi seorang siswa? Aplikasi ini adalah jendela Anda untuk melihat bagaimana Data Science dapat mengungkap pola di balik keberhasilan akademik. Ini bukan sekadar alat prediksi, tetapi sebuah demonstrasi kekuatan AI dalam memahami dunia pendidikan."/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Dibuat oleh:" />

                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:text="Saia Mazaya Fatin" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bagaimana Cara Kerjanya?"
                    android:textColor="@color/md_theme_primary"/>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:gravity="center_vertical">
                    <ImageView android:src="@android:drawable/ic_menu_edit" app:tint="@color/md_theme_accent" android:layout_width="32dp" android:layout_height="32dp"/>
                    <TextView style="@style/TextAppearance.Material3.BodyMedium" android:text="Anda memasukkan data siswa melalui form simulasi." android:layout_marginStart="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:gravity="center_vertical">
                    <ImageView android:src="@android:drawable/ic_menu_rotate" app:tint="@color/md_theme_accent" android:layout_width="32dp" android:layout_height="32dp"/>
                    <TextView style="@style/TextAppearance.Material3.BodyMedium" android:text="Aplikasi memproses dan mengubah data Anda ke format yang dipahami oleh model AI." android:layout_marginStart="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:gravity="center_vertical">
                    <ImageView android:src="@android:drawable/ic_menu_share" app:tint="@color/md_theme_accent" android:layout_width="32dp" android:layout_height="32dp"/>
                    <TextView style="@style/TextAppearance.Material3.BodyMedium" android:text="Model Deep Learning menganalisis pola dari data yang telah diproses." android:layout_marginStart="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:gravity="center_vertical">
                    <ImageView android:src="@android:drawable/ic_menu_view" app:tint="@color/md_theme_accent" android:layout_width="32dp" android:layout_height="32dp"/>
                    <TextView style="@style/TextAppearance.Material3.BodyMedium" android:text="Hasil prediksi nilai ujian ditampilkan kepada Anda secara instan!" android:layout_marginStart="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transparansi dan Sumber Data"
                    android:textColor="@color/md_theme_primary"/>

                <TextView
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Aplikasi ini ditenagai oleh model AI yang dilatih menggunakan dataset publik 'Student Academic Performance Simulation (4000 Records)' yang tersedia di Kaggle."/>

                <TextView
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:id="@+id/tvKaggleLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="Sumber: https://www.kaggle.com/datasets/firedmosquito831/student-academic-performance-simulation-4000"
                    />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>